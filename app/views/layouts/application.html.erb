<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
 

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
    
      <%= link_to  "Home", root_path, class: "navbar-item" %>

    </div>

    <div class="navbar-end">
       <% if author_signed_in? %>
       <div class="navbar-item">
         <span class="title is-5 author"><%= current_author.name%></span>
         <span><%= link_to 'Log out', destroy_author_session_path,  method: :delete, class: "button is-primary is-light" %></span>
       </div>
       <% else %>
      <div class="navbar-item">
        <div class="buttons">
          <%= link_to  "Sign up", new_author_registration_path, class: "button is-primary" %>
          <%= link_to  "Log In", author_session_path, class: "button is-primary" %>
        </div>
      </div>
      <% end%>
    </div>
  </div>
</nav>
 <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
